<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Auth -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.thriftstore.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_customerHomeFragment"
            app:destination="@id/customerHomeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_adminDashboardFragment"
            app:destination="@id/adminDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_adminLoginFragment"
            app:destination="@id/adminLoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminLoginFragment"
        android:name="com.example.thriftstore.ui.auth.AdminLoginFragment"
        android:label="Admin Login"
        tools:layout="@layout/fragment_admin_login">
        <action
            android:id="@+id/action_adminLoginFragment_to_adminDashboardFragment"
            app:destination="@id/adminDashboardFragment"
            app:popUpTo="@id/adminLoginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.thriftstore.ui.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    
    <!-- Customer -->
    <fragment
        android:id="@+id/customerHomeFragment"
        android:name="com.example.thriftstore.ui.customer.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
         <action
            android:id="@+id/action_customerHomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/customerHomeFragment"
            app:popUpToInclusive="true" />
         <action
            android:id="@+id/action_customerHomeFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
         <action
            android:id="@+id/action_customerHomeFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
         <action
            android:id="@+id/action_customerHomeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
         <action
            android:id="@+id/action_customerHomeFragment_to_customerOrderListFragment"
            app:destination="@id/customerOrderListFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.thriftstore.ui.customer.ProductDetailFragment"
        android:label="Product Detail"
        tools:layout="@layout/fragment_product_detail">
         <action
            android:id="@+id/action_productDetailFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.thriftstore.ui.customer.CartFragment"
        android:label="My Cart"
        tools:layout="@layout/fragment_cart">
        <action
             android:id="@+id/action_cartFragment_to_checkoutFragment"
             app:destination="@id/checkoutFragment" />
        <action
             android:id="@+id/action_cartFragment_to_customerOrderListFragment"
             app:destination="@id/customerOrderListFragment"
             app:popUpTo="@id/customerHomeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.thriftstore.ui.customer.CheckoutFragment"
        android:label="Checkout"
        tools:layout="@layout/fragment_checkout">
        <action
            android:id="@+id/action_checkoutFragment_to_customerOrderListFragment"
            app:destination="@id/customerOrderListFragment"
            app:popUpTo="@id/customerHomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.thriftstore.ui.customer.ProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/customerOrderListFragment"
        android:name="com.example.thriftstore.ui.customer.CustomerOrderListFragment"
        android:label="My Orders"
        tools:layout="@layout/fragment_order_list">
        <action
            android:id="@+id/action_customerOrderListFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />
    </fragment>
        
    <!-- Admin -->
    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.example.thriftstore.ui.admin.DashboardFragment"
        android:label="Admin Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_adminDashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/adminDashboardFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_catalogListFragment"
            app:destination="@id/catalogListFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_orderListFragment"
            app:destination="@id/orderListFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_salesReportFragment"
            app:destination="@id/salesReportFragment" />
    </fragment>
    
    <!-- Shared/Admin Routes -->
    <fragment
        android:id="@+id/catalogListFragment"
        android:name="com.example.thriftstore.ui.admin.CatalogListFragment"
        android:label="Catalog"
        tools:layout="@layout/fragment_catalog_list">
        <action
            android:id="@+id/action_catalogListFragment_to_addEditCatalogFragment"
            app:destination="@id/addEditCatalogFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditCatalogFragment"
        android:name="com.example.thriftstore.ui.admin.AddEditCatalogFragment"
        android:label="Add/Edit Product"
        tools:layout="@layout/fragment_add_edit_catalog"/>

    <fragment
        android:id="@+id/orderListFragment"
        android:name="com.example.thriftstore.ui.admin.OrderListFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_order_list">
        <action
            android:id="@+id/action_orderListFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="com.example.thriftstore.ui.admin.OrderDetailFragment"
        android:label="Order Detail"
        tools:layout="@layout/fragment_order_detail"/>

    <fragment
        android:id="@+id/salesReportFragment"
        android:name="com.example.thriftstore.ui.admin.SalesReportFragment"
        android:label="Sales Report"
        tools:layout="@layout/fragment_sales_report">
        <action
            android:id="@+id/action_salesReportFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />
    </fragment>

</navigation>
